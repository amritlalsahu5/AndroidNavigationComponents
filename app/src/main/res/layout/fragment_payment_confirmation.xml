<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ConfirmationFragment">



    <ImageView
            android:id="@+id/iv_payment_success"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="$1 was sent to Mitch"
            app:layout_constraintVertical_bias=".2"
            android:background="@drawable/ic_tick_ok"
            android:textSize="25sp"

    />
    <TextView
            android:id="@+id/tv_success_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_payment_success"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Payment Successful"
            android:textSize="30sp"
            android:textStyle="bold"
            />
    <TextView
            android:id="@+id/tv_success_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_success_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Your payment of $25.00 \n was successfully completed"
            android:textSize="25sp"
            />

    <Button
            android:id="@+id/btn_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_success_message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Done"
            android:textSize="25sp"
            app:layout_constraintWidth_percent=".7"
            android:background="@android:color/holo_blue_dark"
            />


</androidx.constraintlayout.widget.ConstraintLayout>